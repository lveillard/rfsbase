{
	"compilerOptions": {
		// Language and Output
		"target": "ES2022",
		"lib": ["dom", "dom.iterable", "ES2022"],
		"jsx": "react-jsx",
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"incremental": true,
		// Strict Type Checking
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		// Module Resolution
		"esModuleInterop": true,
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		// IDE Support
		"types": ["vitest/globals"],
		"plugins": [
			{
				"name": "next"
			}
		],
		// Path Aliases
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@config/*": ["../config/*"],
			"@shared/*": ["../packages/shared/src/*"],
			"@rfsbase/shared": ["../packages/shared/src/index"],
			"surrealdb-better-auth": ["./src/types/surrealdb-better-auth.d.ts"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts"
	],
	"exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx", "src/test/**"]
}
