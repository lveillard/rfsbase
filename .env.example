# App
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (SurrealDB) - Used by Server Actions
SURREAL_URL=http://localhost:8000
SURREAL_NS=rfsbase
SURREAL_DB=main
SURREAL_USER=root
SURREAL_PASS=root

# Better Auth
BETTER_AUTH_SECRET=your-better-auth-secret-key-min-32-chars

# OAuth (Google)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth (GitHub)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email (for magic links - configure in better-auth.ts)
RESEND_API_KEY=

# AI Embeddings Configuration
# Option 1: OpenAI (for local development)
OPENAI_API_KEY=
# OPENAI_MODEL=text-embedding-3-small  # Optional: small (1536d) or large (3072d)

# AWS Bedrock Embeddings (production on EC2)
# AWS_BEDROCK_ENABLED=true
# AWS_REGION=us-east-1
# BEDROCK_EMBEDDING_MODEL=cohere.embed-v4:0  # Options: cohere.embed-v4:0, cohere.embed-english-v3, amazon.titan-embed-text-v2:0, amazon.nova-2-multimodal-embeddings-v1:0

# Analytics (optional)
POSTHOG_KEY=
POSTHOG_HOST=https://app.posthog.com
