# App
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (SurrealDB) - Used by Server Actions
SURREAL_URL=http://localhost:8000
SURREAL_NS=rfsbase
SURREAL_DB=main
SURREAL_USER=root
SURREAL_PASS=root

# Better Auth
BETTER_AUTH_SECRET=your-better-auth-secret-key-min-32-chars

# OAuth (Google)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth (GitHub)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email (for magic links - configure in better-auth.ts)
RESEND_API_KEY=
FROM_EMAIL=noreply@rfsbase.com

# AI Embeddings Configuration
# Option 1: OpenAI (for local development)
OPENAI_API_KEY=
# OPENAI_MODEL=text-embedding-3-small  # Optional: small (1536d) or large (3072d)

# Option 2: AWS Bedrock (recommended for production on EC2)
# AWS_BEDROCK_ENABLED=true
# AWS_REGION=us-east-1
# BEDROCK_MODEL=amazon.titan-embed-text-v2:0  # Options: amazon.titan-embed-text-v2:0, cohere.embed-english-v3, amazon.nova-embed-multimodal-v1:0
# EMBEDDING_DIMENSIONS=1024  # Titan: 1024, Cohere: 1024, Nova: 256|384|1024|3072

# Analytics (optional)
POSTHOG_KEY=
POSTHOG_HOST=https://app.posthog.com
